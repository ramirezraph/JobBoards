<div class="container mt-5" style="width: 600px;">
    <div class="card p-4 text-start">
        <p class="text-secondary fs-3">Change Password</p>

        <form asp-controller="Account" asp-action="ChangePassword" method="POST">
            <div class="mt-2">
                <label>Old Password</label>
                <input class="form-control mt-2" />
            </div>
            <div class="mt-2">
                <label>New Password</label>
                <input class="form-control mt-2" />
            </div>
            <div class="mt-2">
                <label>Confirm New Password</label>
                <input class="form-control mt-2" />
            </div>
            <div class="mt-4 d-flex">
                <button type="submit" class="px-5 btn btn-primary me-2">Save Changes</button>
                <a asp-controller="Account" asp-action="Profile" class="btn btn-secondary">Cancel</a>
            </div>
        </form>

    </div>
</div>

