@using JobBoards.WebApplication.ViewModels.Account;
@model ChangePasswordViewModel

<div class="container mt-5" style="width: 600px;">
    <div class="card p-4 text-start">
        <p class="text-secondary fs-3">Change Password</p>

        <form asp-controller="Account" asp-action="ChangePassword" method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mt-2">
                <label>Old Password</label>
                <input class="form-control mt-2 " type="password" asp-for="CurrentPassword" placeholder="Old Password" />
              
            </div>
            <div class="mt-2">
                <label>New Password</label>
                <input class="form-control mt-2 " type="password" asp-for="NewPassword" placeholder="New Password" />

            </div>
            <div class="mt-2">
                <label>Confirm New Password</label>
                <input class="form-control mt-2 " type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" />

            </div>
            <div class="mt-4 d-flex">
                <button type="submit" class="px-5 btn btn-primary me-2">Save Changes</button>
                <a asp-controller="Account" asp-action="Profile" class="btn btn-secondary">Cancel</a>
            </div>
        </form>

    </div>
</div>