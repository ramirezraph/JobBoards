@using JobBoards.WebApplication.ViewModels.Account;
@model LoginViewModel;

<div class="container mt-5" style="width: 400px;">
    <form asp-controller="Account" asp-action="Login" method="post">
        <div class="card p-4 text-center">
            <p class="text-black fs-3">Sign In</p>
            <p class="text-secondary mt-n3">Please login to continue</p>

            <div class="text-start">
                <div>
                    <input class="form-control" asp-for="Email" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mt-3">
                    <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="w-100 text-end mt-2">
                <a href="#">Forgot Password?</a>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Login</button>

            @if (ViewBag.LoginFailedMessage is not null)
            {
                <p class="text-danger mt-3">@ViewBag.LoginFailedMessage</p>
            }

            <div class="d-flex justify-content-center" style="margin-top: 3rem;">
                <span>Don't have an account?</span>
                <a class="ms-2" asp-controller="Account" asp-action="Register">Register</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {

}