@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="my-5">
        <h1 class="text-primary text-center">
            Your Next Career Move Starts Here
        </h1>
    </div>
    <div class="mt-md-5">
        <div class="row">
            <div class="col-12">
                <form class="d-flex">
                    <input type="text" class="form-control">
                    <button class="ms-2 btn btn-outline-primary w-25" type="button">Search</button>
                </form>
                <span class="text-black-50">Search for job title or keyword</span>
            </div>
        </div>
    </div>
</div>
<div class="mt-5">
    <div class="row">
        <div class="col-md-4 mb-3 mb-md-0">
            <a asp-controller="Jobs" asp-action="Details"
                class="btn text-start rounded p-4 bg-white border border-gray-300 d-flex flex-column justify-content-between h-100">
                <div class="d-flex flex-column">
                    <h5 class="text-gray-900 font-semibold">
                        Software Engineer
                    </h5>
                    <p class="text-black-50">
                        Full-time, PHP 60,000 - PHP 75,000
                    </p>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <p class="m-0" style="font-weight: 500;">
                        Metro Manila
                    </p>
                    <p class="text-black-50 m-0" style="font-size: 0.8rem;">
                        Posted 1h ago
                    </p>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-3 mb-md-0">
