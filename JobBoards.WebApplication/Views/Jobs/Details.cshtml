@using JobBoards.WebApplication.ViewModels.Jobs;
@model DetailsViewModel;

@{
    ViewData["Title"] = "Job Details";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card border-0">
                <div class="card-body">
                    <h2 class="card-title text-primary" style="font-size: 48px;">@Model.JobPost.Title</h2>
                    <h4 class="card-subtitle text-muted mb-4">@Model.JobPost.JobType.Name, PHP @Model.JobPost.MinSalary
                        - PHP @Model.JobPost.MaxSalary</h4>
                    <p class="card-text">
                        @Model.JobPost.Description
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Job Details</h6>
                    <div class="row mt-3">
                        <h6 class="col-4 d-inline">Job Type:</h6>
                        <div class="col-8">
                            @Model.JobPost.JobType.Name
                        </div>
                    </div>
                    <div class="row mt-2">
                        <h6 class="col-4 d-inline">Salary:</h6>
                        <div class="col-8">
                            PHP @Model.JobPost.MinSalary - PHP @Model.JobPost.MaxSalary
                        </div>
                    </div>
                    <div class="row mt-2">
                        <h6 class="col-4 d-inline">Location:</h6>
                        <div class="col-8">
                            @Model.JobPost.JobLocation.City, @Model.JobPost.JobLocation.Country
                        </div>
                    </div>
                    <div class="row mt-2">
                        <h6 class="col-4 d-inline">Posted:</h6>
                        <div class="col-8">
                            @Model.JobPost.CreatedAt
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.HasWriteAccess)
            {
                <div class="card mt-2">
                    <div class="card-body">
                        <h6 class="card-title">Applications</h6>
                        <div class="row mt-3">
                            <h6 class="col-4 d-inline"># of Job Applicants:</h6>
                            <div class="col-8">
                                @Model.JobPost.JobApplications.Count
                            </div>
                        </div>
                        <a asp-controller="Jobs" asp-action="ManageJobApplications" asp-route-id="@Model.JobPost.Id"
                            class="btn btn-secondary btn-block w-100 mt-3">Manage Applications</a>
                    </div>
                </div>
            }

            @if (Model.WithApplication)
            {
                <div class="card mt-2">
                    <div class="card-body">
                        <h6 class="card-title">My Application</h6>
                        <div class="row mt-3">
                            <h6 class="col-4 d-inline">Status:</h6>
                            <div class="col-8 text-info">
                                Viewed
                            </div>
                        </div>
                        <div class="row mt-3">
                            <h6 class="col-4 d-inline">Resume:</h6>
                            <div class="col-8 text-info">
                                my-resume.pdf
                            </div>
                        </div>
                        <div class="row mt-3">
                            <h6 class="col-4 d-inline">Applied</h6>
                            <div class="col-8">
                                04/02/2023 - 3:23 PM
                            </div>
                        </div>
                        <a href="#" class="btn btn-danger btn-block w-100 mt-3">Withdraw</a>
                    </div>
                </div>
            }

            <a asp-controller="Jobs" asp-action="Index" class="btn btn-secondary btn-block w-100 mt-2">Back to List</a>

            @if (!Model.HasWriteAccess && !Model.WithApplication)
            {
                <a href="#" class="btn btn-primary btn-block w-100 mt-2">Apply Now</a>
            }

            @if (Model.HasWriteAccess)
            {
                <a href="#" class="btn btn-secondary btn-block w-100 mt-1">Deactivate Job Post</a>
                <a asp-controller="Jobs" asp-action="Update" class="btn btn-primary btn-block w-100 mt-1">Edit</a>
                <a href="#" class="btn btn-danger btn-block w-100 mt-1">Delete</a>
            }
        </div>
    </div>
</div>
