@using JobBoards.WebApplication.ViewModels.Management
@model ManageJobCategoriesViewModel

@{
    ViewData["Title"] = "Edit Job Category";
}

<style>
    form label {
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 2rem;
    }

    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 2rem;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f5f5f5;
    }

    .form-container h2 {
        text-align: center;
        margin-bottom: 2rem;
        font-size: 2rem;
        text-shadow: 1px 1px #ccc;
    }

    .form-control {
        border-radius: 3px;
        box-shadow: none;
        border: none;
        border-bottom: 2px solid #ccc;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #428bca;
    }
</style>

<div class="form-container">
    <h2 class="text-primary">Edit Job Category</h2>
    <form asp-controller="Management" asp-action="EditJobCategory" method="POST">
        <div class="form-group mt-2" hidden>
            <input asp-for="JobCategoriesForm.JobCategoryId" type="text" class="form-control" readonly>
        </div>
        <div class="form-group mt-2">
            <label asp-for="JobCategoriesForm.Name">Job Category Name</label>
            <input asp-for="JobCategoriesForm.Name" type="text" class="form-control mt-2"
                placeholder="Enter job category name">
            <span asp-validation-for="JobCategoriesForm.Name" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="JobCategoriesForm.Description">Job Category Description</label>
            <textarea input asp-for="JobCategoriesForm.Description" type="text" class="form-control mt-2"
                placeholder="Enter job category description" rows="4"></textarea>
            <span asp-validation-for="JobCategoriesForm.Description" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <button type="submit" class="btn btn-primary mt-2 w-25">Save Changes</button>
            <a class="btn btn-secondary mt-2" asp-controller="Management" asp-action="JobCategories"
                asp-route-id="@Model.JobCategoriesForm.JobCategoryId">Cancel</a>
        </div>
    </form>
</div>
